{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.0.2/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Visualization Study",
    "version": "pilot",
    "authors": [
      "Zelda Ferris"
    ],
    "date": "2025-02-27",
    "description": "A low budget recreation of Cleveland and McGill's study on graphical perception.",
    "organizations": [
      "WPI"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "a3/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": true
  },
  "baseComponents": {
    "bar-chart": {
      "type": "website",
      "response": [
        {
          "id": "barChart",
          "prompt": "Your selected answer:",
          "location": "belowStimulus",
          "type": "reactive"
        },
        {
          "id": "barChartCorrectAnswer",
          "prompt": "Correct Answer",
          "location": "belowStimulus",
          "type": "numerical",
          "hidden": true
        }
      ],
      "path": "a3/assets/bar-chart.html",
      "instructionLocation": "aboveStimulus"
    },
    "pie-chart": {
      "type": "website",
      "response": [
        {
          "id": "pieChart",
          "prompt": "Your selected answer:",
          "location": "belowStimulus",
          "type": "reactive"
        },
        {
          "id": "pieChartCorrectAnswer",
          "prompt": "Correct Answer",
          "location": "belowStimulus",
          "type": "reactive",
          "hidden": true
        }
      ],
      "path": "a3/assets/pi-chart.html",
      "instructionLocation": "aboveStimulus"
  },
  "bar-chart-v": {
    "type": "website",
    "response": [
      {
        "id": "barChartV",
        "prompt": "Your selected answer:",
        "location": "belowStimulus",
        "type": "reactive"
      },
      {
        "id": "barChartVCorrectAnswer",
        "prompt": "Correct Answer",
        "location": "belowStimulus",
        "type": "reactive",
        "hidden": true
      }
    ],
    "path": "a3/assets/bar-chart-v.html",
    "instructionLocation": "aboveStimulus"
  }
},
  "components": {
    "welcome": {
      "type": "markdown",
      "path": "a3/assets/welcome.md",
      "response": []
    }, 
    "bar-chart-1": {
      "baseComponent": "bar-chart",
      "description": "An interactive bar chart.",
      "instruction": "Click on the largest of the two marked bars.",
      "parameters": {
        "barData": [1, 2, 3, 4, 5]
      }
    
    },
    "bar-chart-v-1": {
      "baseComponent": "bar-chart-v",
      "description": "An interactive bar chart.",
      "instruction": "Click on the largest of the two marked bars.",
      "parameters": {
        "barData": [1, 2, 3, 4, 5]
      }
    
    },
    "pie-chart-1": {
      "baseComponent": "pie-chart",
      "description": "An interactive pie chart.",
      "instruction": "Click on the largest of the two marked slices.",
      "parameters": {
        "pieData": [1, 2, 3, 4, 5]
      }
    },
    "bar-chart-2": {
      "baseComponent": "bar-chart",
      "description": "An interactive bar chart.",
      "instruction": "Click on the largest of the two marked bars.",
      "parameters": {
        "barData": [1, 2, 3, 4, 5]
      }
    },
    "pie-chart-2": {
      "baseComponent": "pie-chart",
      "description": "An interactive pie chart.",
      "instruction": "Click on the largest of the two marked slices.",
      "parameters": {
        "pieData": [1, 2, 3, 4, 5]
      }
    },
    "bar-chart-3": {
      "baseComponent": "bar-chart",
      "description": "An interactive bar chart.",
      "instruction": "Click on the largest of the two marked bars.",
      "parameters": {
        "barData": [1, 2, 3, 4, 5]
      }
    },
    "pie-chart-3": {
      "baseComponent": "pie-chart",
      "description": "An interactive pie chart.",
      "instruction": "Click on the largest of the two marked slices.",
      "parameters": {
        "pieData": [1, 2, 3, 4, 5]
      }
    }
  },
  "sequence": {
    "order": "random",
    "components": ["welcome", "bar-chart-1", "pie-chart-1", "bar-chart-v-1", "bar-chart-2", "pie-chart-2", "bar-chart-3","pie-chart-3"]
  }
}